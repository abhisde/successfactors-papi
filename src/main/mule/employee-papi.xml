            </on-error-propagate>
        </error-handler>
    </flow>
    <flow name="get:\employee:employee-papi-config">
		<flow-ref doc:name="Flow Reference" doc:id="1a17ac3b-d046-42bb-b8a9-5d329f8a309c" name="getEmployees"/>
    </flow>
</mule>
